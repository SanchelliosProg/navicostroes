<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="store"
            type="com.tstasks.sanchellios.navicostores.data_binders.StoreBinder"/>
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/store_card"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/main_store_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/card_names_layout"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
               >
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/store_name_txt_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:text="@{store.name}"
                    tools:text="Name"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/colorPrimaryDark" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/store_address_txt_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@{store.address}"
                    tools:text="Address"
                    android:padding="4dp"
                    android:singleLine="true"/>
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/store_phone_txt_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@{store.phone}"
                    tools:text="Phone Number"
                    android:padding="4dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttons_layout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/store_card_buttons_shape">
                <ImageButton
                    android:id="@+id/phone_button"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_white_24dp"
                    android:background="@null"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/web_button"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_web_white_24dp"
                    android:background="@null"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/email_button"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email_white_24dp"
                    android:background="@null"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>